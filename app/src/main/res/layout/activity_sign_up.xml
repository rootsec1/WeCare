<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:paddingTop="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                app:lottie_fileName="lottie/cloud_loader.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_width="128dp"
                android:layout_height="128dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/signUpUserImageView"
                android:src="@drawable/ic_person_outline_black_512dp"
                android:scaleType="centerCrop"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorTextDark"
                android:layout_gravity="center"
                android:layout_marginStart="150dp"
                android:layout_width="96dp"
                android:layout_height="96dp" />
        </LinearLayout>

        <TextView
            android:textColor="@color/colorTextDark"
            android:fontFamily="@font/righteous_regular"
            android:layout_marginTop="16dp"
            android:textSize="40sp"
            android:text="@string/wecare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Sign Up. Join the community :)"
            android:textSize="24sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorTextDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_marginTop="32dp"
            android:id="@+id/signUpNameEditText"
            android:hint="NAME"
            android:textSize="16sp"
            android:textColor="@color/colorTextDark"
            android:fontFamily="sans-serif-light"
            android:inputType="textCapWords"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_marginTop="16dp"
            android:id="@+id/signUpEmailEditText"
            android:hint="EMAIL ADDRESS"
            android:textSize="16sp"
            android:textColor="@color/colorTextDark"
            android:fontFamily="sans-serif-light"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_marginTop="16dp"
            android:id="@+id/signUpPasswordEditText"
            android:hint="PASSWORD"
            android:textSize="16sp"
            android:textColor="@color/colorTextDark"
            android:fontFamily="sans-serif-light"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_marginTop="16dp"
            android:id="@+id/signUpConfirmPasswordEdtText"
            android:hint="CONFIRM PASSWORD"
            android:textSize="16sp"
            android:textColor="@color/colorTextDark"
            android:fontFamily="sans-serif-light"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_marginTop="16dp"
            android:id="@+id/signUpPhoneEdtText"
            android:hint="CONTACT NUMBER"
            android:textSize="16sp"
            android:textColor="@color/colorTextDark"
            android:fontFamily="sans-serif-light"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_marginTop="16dp"
            android:id="@+id/signUpEC1EditText"
            android:hint="EMERGENCY CONTACT 1"
            android:textSize="16sp"
            android:textColor="@color/colorTextDark"
            android:fontFamily="sans-serif-light"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_marginTop="16dp"
            android:id="@+id/signUpEC2EditText"
            android:hint="EMERGENCY CONTACT 2"
            android:textSize="16sp"
            android:textColor="@color/colorTextDark"
            android:fontFamily="sans-serif-light"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_marginTop="16dp"
            android:id="@+id/signUpEC3EditText"
            android:hint="EMERGENCY CONTACT 3"
            android:textSize="16sp"
            android:textColor="@color/colorTextDark"
            android:fontFamily="sans-serif-light"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/signUpButton"
            android:text="SIGN UP"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>